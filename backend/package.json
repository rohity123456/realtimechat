{
  "name": "@mind-wellness-chat/backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon --watch './**/*.ts' --exec 'ts-node -r tsconfig-paths/register' ./app.ts",
    "build": "tsc",
    "start-server": "npm run build && node dist/app.js"
  },
  "_moduleAliases": {
    "@/*": "dist/*",
    "@/socket": "dist/socket",
    "@/routes": "dist/routes",
    "@/models": "dist/models",
    "@/controllers": "dist/controllers",
    "@/utils": "dist/utils",
    "@/middlewares": "dist/middleware"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "~4.16.1",
    "joi": "^17.12.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.2.3",
    "morgan": "~1.9.1",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  }
}
